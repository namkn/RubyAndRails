<% title "Movie List" %>
<p><img src="/assets/movies.jpg"></p>
<table>
  <tr>
    <th>Name</th>
    <th>Genre</th>
    <th>Watched</th>
  </tr>
  <% for movie in @movies %>
    <tr>
      <td><%= movie.name %></td>
      <td><%= movie.genre %></td>
      <td><%= movie.watched %></td>
      <td><%= link_to "Show", movie %></td>
      <td><%= link_to "Edit", edit_movie_path(movie) %></td>
      <td><%= link_to "Destroy", movie, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Movie", new_movie_path %></p>
